<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="text_view2">
        <item name="android:background">@drawable/shape_et</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="btn2">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:background">@drawable/shape_et_2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="view">
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
    </style>

    <style name="text_view">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="et_one">

        <item name="android:layout_marginEnd">@dimen/_12sdp</item>

        <item name="android:layout_marginStart">@dimen/_12sdp</item>

        <item name="android:layout_marginTop">@dimen/_12sdp</item>

        <item name="android:padding">@dimen/_12sdp</item>

        <item name="android:background">@android:color/white</item>

        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">@dimen/_50sdp</item>

    </style>


    -

    <style name="et_register">

        <item name="android:layout_marginEnd">@dimen/_12sdp</item>

        <item name="android:layout_marginStart">@dimen/_12sdp</item>

        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:background">@drawable/rectangle23</item>

        <item name="android:paddingRight">@dimen/_20sdp</item>

        <item name="android:textColorHint">@color/black</item>

        <item name="android:gravity">right|center</item>

        <item name="android:textSize">@dimen/_15ssp</item>

        <item name="android:drawablePadding">@dimen/_15sdp</item>

        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">@dimen/_40sdp</item>

    </style>


